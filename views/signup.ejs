<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Signup | Student Social</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: Arial, sans-serif;
      
    background: linear-gradient(135deg, #e9edc9, #fefae0);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .box {
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      width: 420px;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }
    input,
    button {
      width: 100%;
      margin: 10px 0;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      background: #28a745;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }
    button:hover {
      background: #218838;
    }
    .alert {
      margin-top: 10px;
    }
    .bottom-text {
      text-align: center;
      margin-top: 15px;
    }
  </style>
</head>

<body>
  <div class="box">
    <h1>Signup Form</h1>

    <!-- ✅ Flash Messages -->
    <% if (locals.error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (locals.success && success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- ✅ Signup Form -->
    <form
      action="/signup"
      method="POST"
      novalidate
      class="row g-3 needs-validation"
    >
      <div>
        <label class="form-label">Username:</label>
        <input type="text" name="username" class="form-control" required />
        <div class="invalid-feedback">Please enter a username</div>
      </div>

      <div>
        <label class="form-label">Email:</label>
        <input type="email" name="email" class="form-control" required />
        <div class="invalid-feedback">Please enter an email</div>
      </div>

      <div>
        <label class="form-label">Password:</label>
        <input type="password" name="password" class="form-control" required />
        <div class="invalid-feedback">Please enter a password</div>
      </div>

      <button type="submit" class="btn btn-success mt-2">Signup</button>
    </form>

    <div class="bottom-text">
      <p>Already have an account? <a href="/login">Login here</a></p>
      <!-- <p>Continue without signup? <a href="/onlyvisitors">Click here</a></p> -->
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ✅ Client-side Validation -->
  <script>
    (function () {
      "use strict";
      const forms = document.querySelectorAll(".needs-validation");
      Array.from(forms).forEach(function (form) {
        form.addEventListener(
          "submit",
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          },
          false
        );
      });
    })();
  </script>
</body>
</html>
