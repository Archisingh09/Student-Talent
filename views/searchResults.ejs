<% layout("/layouts/boilerplate") %>
  <style>
    body {
      background-color: #fefae0;
      font-family: Arial, sans-serif;
  
    }

    h1 {
      text-align: center;
      color: #9e2a2b;
    margin-top: 120px;
    }

    .results {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #faedcd;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    ol {
      padding-left: 40px;
      list-style: decimal; /* ensures 1,2,3 numbers appear */
    }

    li {
      margin: 10px 0;
      font-size: 20px;
    }

    .user-link {
      color: #000;
      font-weight: bold;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .user-link:hover {
      color: #9e2a2b;
    }

    @media (max-width: 600px){

    .h1{
      width: 300px;
    }
      
    }
  </style>
</head>
<body>
  <h1>Search Results for "<%= query %>"</h1>

  <div class="results">
    <% if (users && users.length > 0) { %>
      <ol>
        <% users.forEach(user => { %>
          <li>
            <a class="user-link" href="/profile/<%= user._id %>"><%= user.username %></a>
          </li>
        <% }) %>
      </ol>
    <% } else { %>
      <p style="text-align:center;">No users found.</p>
    <% } %>
  </div>
  
</body>
</html>
